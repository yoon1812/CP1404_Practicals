
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ' '
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate()
        Label:
            id: output_label
            font_size: 48
            color:(1,153,204,1)

    Label:
        text:"Enter a number and press Square"



