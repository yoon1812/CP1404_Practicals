BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        id: output_label
        size_hint_y: 1
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.5
        Button:
            text: "Create Widgets"
            on_release: app.create_widgets()
        Button:
            text: "Clear Widgets"
            on_release: app.clear_all()